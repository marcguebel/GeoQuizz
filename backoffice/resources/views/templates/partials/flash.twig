{% if flash.getMessage("info") %}
	<div class="alert alert-info alert-dismissable show fade w-40 m-auto" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">×</span>
		</button>
		{{ flash.getMessage("info") | first }}
	</div>
{% endif %}

{% if flash.getMessage("error") %}
	<div class="alert alert-danger alert-dismissable show fade mb-5" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">×</span>
		</button>
		{{ flash.getMessage("error") | first }}
	</div>
{% endif %}