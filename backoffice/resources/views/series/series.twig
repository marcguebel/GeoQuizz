{% extends "templates/app.twig" %}
{% block content %}
	<div class="flex-row">
		{% for serie in series %}
			<a href="{{ path_for("serie.details", {"id": serie.id}) }}" class="h-100">	
				<div class="card h-100 col-lg-3 blockPhoto">
					<div class="card-body d-flex flex-column justify-content-center align-items-center">
						<h4 class="card-title text-primary mt-4">
							Ville:<br/> <span>{{ serie.ville }}</span><br/><br/>
							Descritpion:<br/> <span>{{ serie.libelle }}</span><br/><br/>
						</h4>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
{% endblock %}